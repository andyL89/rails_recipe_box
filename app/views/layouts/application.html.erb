<!DOCTYPE html>
<html>
  <head>
    <title>RailsRecipeBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Recipe Box</a>
          </div>

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="active"><a href="/recipes">Recipes <span class="sr-only">(current)</span></a></li>
              <li><a href="/ingredients">Ingredients</a></li>
              <li><a href="/tags">Tags</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% if current_user %>
                <li><%= current_user.email %> | <%= link_to "Sign out", '/signout' %></li>
              <% else %>
                <li><%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %></li>
              <% end %>
            </ul>
            <form class="navbar-form navbar-right">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            </form>
          </div>
        </div>
      </nav>




      <%= yield %>
      <div class="notice">
        <%= flash[:alert] %>
        <%= flash[:notice] %>
      </div>
    </div>
  </body>
</html>
